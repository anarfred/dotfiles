# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# background
# border
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=15
markup=none

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.

[bandwidth]
command=/home/nrfrd/.config/i3blocks/blocks/bandwidth
instance=wlp3s0;in
label=
# instance=eth0;in
interval=1

[bandwidth]
command=/home/nrfrd/.config/i3blocks/blocks/bandwidth
instance=wlp3s0;out
label=
# instance=eth0;in
interval=1


[iface]
command=/home/nrfrd/.config/i3blocks/blocks/iface
label=
instance=wlp3s0
color=#00FF00
interval=10
separator=false

[wifi]
command=/home/nrfrd/.config/i3blocks/blocks/wifi
instance=wlan0
# instance=wlp3s0
interval=10
separator=false


# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume]
# label=VOL
command=/home/nrfrd/.config/i3blocks/blocks/volume
label=♪
instance=Master
#instance=PCM
interval=once
signal=10

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=
command=/home/nrfrd/.config/i3blocks/blocks/memory
instance=mem;free
separator=false
interval=30

[memory]
label=
command=/home/nrfrd/.config/i3blocks/blocks/memory
instance=swap;total
separator=false
interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=
command=/home/nrfrd/.config/i3blocks/blocks/disk
#instance=/mnt/data
interval=30



# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
command=/home/nrfrd/.config/i3blocks/blocks/cpu
# label=CPU
label=
interval=2
# min_width=CPU: 100.00%
#separator=false

#[load_average]
#interval=10

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=BAT
#label=⚡
#instance=1
interval=30

# Date Time
#
[time]
label=
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
